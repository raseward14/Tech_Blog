<!-- Loop over each object in the post array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>Created by {{post.user.user_name}} on {{format_date post.date_created}}</p>
    <p>{{post.content}}</p>
  </div>
  {{#each comment as |comment|}}
  <div>
    <p>{{post.comment.comment}} by {{post.comment.user.user_name}}</p>
  </div>
  {{/each}}
</div>
{{/each}}