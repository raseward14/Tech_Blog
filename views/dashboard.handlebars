<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user_name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-5 create-post">
    <h3>Create a Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" onClick="window.location.reload();">Create</button>
      </div>
    </form>
  </div>

 
  <div class="col-md-6 post-list">
    {{#if posts.length}}
    {{#each posts as |post|}}
    <div class="row mb-2 post-list">
      <div class="col-md-8 post-list-item">
        <h4>{{post.title}} on {{format_date post.date_created}}</h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
    {{/if}}
  </div>
  
</div>

<script src="./js/dashboard.js"></script>